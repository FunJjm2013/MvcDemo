<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的应用程序</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles",required:false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("程序", "Index", "Home", new { Area=""}, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home", routeValues: new { Area=""}, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("关于", "About", "Home", routeValues: new { Area=""}, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("联系", "Contact", "Home", routeValues: new { Area=""}, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("MVC", "Index", "Home", routeValues: new { Area = "MVCStudy" }, htmlAttributes: new { id = "mvcstudyLink" })</li>
                    <li>@Html.ActionLink("H5CS3", "Index", "Home", routeValues: new { Area = "HTML5CSS3" }, htmlAttributes: new { id = "html5css3Link" })</li>
                    <li>@Html.ActionLink("Js", "Index", "Home", routeValues: new { Area = "JavaScript" }, htmlAttributes: new { id = "javascriptLink" })</li>
                    <li>@Html.ActionLink("JQuery", "Index", "Home", routeValues: new { Area = "JQuery" }, htmlAttributes: new { id = "jqueryLink" })</li>
                    <li>@Html.ActionLink("BootStrap", "Index", "Start", routeValues: new { Area = "BootStrap" }, htmlAttributes: new { id = "bootstratLink" })</li>
                    <li>@Html.ActionLink("存储过程", "Index", "Home", routeValues: new { Area = "StoredProcedure" }, htmlAttributes: new { id = "procedureLink" })</li>
                    <li>@Html.ActionLink("数据结构", "Index", "Home", routeValues: new { Area = "DataStructures" }, htmlAttributes: new { id = "DataStructuresLink" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - 我的 MVC 应用程序</p>
        </footer>
    </div>
</body>
</html>
